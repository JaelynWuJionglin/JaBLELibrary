<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_theme"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:paddingTop="20dp"
    android:paddingBottom="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical">

        <LinearLayout
            android:id="@+id/lr_start"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_start"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/back_arrow_24"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_dev_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XXXXXX"
                android:textColor="@color/white1"
                android:textSize="17sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_mac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XX:XX:XX:XX:XX:XX"
                android:textColor="@color/white1"
                android:textSize="14sp"/>
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_disconnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="@string/text_disconnect"
            android:textColor="@color/white1"
            android:textSize="12sp"
            android:background="@drawable/shape_round_line_bg"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:layout_marginTop="1dp"
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>