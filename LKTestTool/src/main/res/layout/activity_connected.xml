<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/ly_top"
        layout="@layout/connected_dev_top_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_top_item1" />

    <!-- MESH RESET -->
    <Button
        android:id="@+id/bt_reset_mesh"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:text="MESH RESET"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"/>

    <include
        android:id="@+id/item_rssi"
        layout="@layout/layout_bt_edit"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_rssi_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:text="--"/>


    <!-- -->
    <include
        android:id="@+id/item_adv_inv"
        layout="@layout/layout_bt_edit_2"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <include
        android:id="@+id/item_con_inv"
        layout="@layout/layout_bt_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <include
        android:id="@+id/item_pid"
        layout="@layout/layout_bt_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/bt_modify_adv_name"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:minWidth="150dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:text="修改广播名称"/>

</LinearLayout>